<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tangtuongco.apppppppppppp.activity.ThemBaiViet">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/logooo"
            android:id="@+id/imgMonAn"
            android:layout_width="180dp"
            android:layout_height="180dp" />
        <Button
            android:id="@+id/btnChon"
            android:text="Chọn Hình"
            android:layout_margin="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtTieuDe"
            android:text="Tiêu đề"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
       <Spinner
           android:id="@+id/spinnerTHELOAI"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       </Spinner>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnUPVIDEO"
                android:text="Chọn Video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtTRANGTHAI"
                android:text="Chưa có video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <Button
            android:id="@+id/btnDANGBAI"
            android:text="Đăng Bài"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
